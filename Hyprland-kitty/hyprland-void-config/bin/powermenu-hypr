#!/bin/bash

entries="⏻ Shutdown\n⭮ Reboot\n⏾ Suspend\n Lock"

selected=$(echo -e $entries|wofi --width 450 --height 150 --dmenu --cache-file /dev/null | awk '{print tolower($2)}')

case $selected in
  shutdown)
    exec sudo shutdown -P now;;
   reboot)
    exec sudo reboot;;
 suspend)
    exec sudo zzz;;
  lock)
    exec hyprlock;;
esac
